{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="mt-4">

        <div class="form-group">
            <label for="product-name">Product Name</label>
            <input type="text" name="product-name" class="form-control" id="product-name" value="{{ product.name }}">
        </div>

        <div class="form-group">
            <label for="product-price">Product Price </label>
            <input type="number" name="product-price" class="form-control" id="product-price" value="{{ product.price }}">
        </div>

        <div class="mt-3">
            <label>Product Detail</label>
            {% include('@includes/editor.html.twig') with {
                initialText:'Please enter product details!!.
                    You can insert images and videos here as well.',
                actionPath:path('edit_product',{'id':product.id}),
                deltaType:'product'
            } %}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/editor.js") }}"></script>
{% endblock %}
