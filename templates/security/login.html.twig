{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% if error.message is defined %}
        <div class="alert alert-danger">
            {{ error.message|trans({},'security') }}
        </div>
    {% endif %}

    <div class="d-flex flex-row justify-content-center">
        <img src="{{ asset('images/bpm-logo.png') }}">
    </div>

    <form method="post">
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% else %}
            <div class="w-50 m-auto">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="off"
                       required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="off" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="d-flex flex-row justify-content-around">
                    <button class="btn btn-lg btn-dark mt-3" type="submit">
                        Log in
                    </button>
                    <a href="{{ path('app_register') }}" class="btn btn-lg btn-dark mt-3" type="submit">
                        Register
                    </a>
                </div>
            </div>
        {% endif %}
    </form>
{% endblock %}
