{% extends 'base.html.twig' %}

{% block title %}users{% endblock %}

{% block body %}

    <style>
        table, tr, th, td {
            border: 1px solid rgba(210, 176, 176, 0.72)
        }

        th, td {
            text-align: center;
        }
    </style>

    <div class="mt-3 w-100 d-flex flex-row justify-content-center">
        <button id="create-new-user-button" class="btn btn-success">Create new user</button>
    </div>

    <div id="existing-users" class="mt-3">
        <table class="m-auto">
            <tr class="w-100">
                <th class="w-25">ID</th>
                <th class="w-25">User Name</th>
                <th class="w-25">User Roles </th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.role }}</td>
                </tr>
            {%  endfor %}
        </table>
    </div>

    <div id="user-form" style="border: 1px solid #868686; width:300px;position: absolute; top:23%;left:18%; display: none; background: #f1ecec; border-radius: 4px; padding: 1%;">
        {{ form_start(userForm) }}
        {{ form_row(userForm.name,{'label':'Name of user'}) }}
        {{ form_row(userForm.role) }}
        <div class="d-flex flex-row justify-content-center">
            {{ form_row(userForm.submit) }}
            <button type="button" class="btn btn-danger h-25" id="cancel-new-user-button">Cancel</button>
        </div>
        {{ form_end(userForm) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {

        });
    </script>
{% endblock %}

